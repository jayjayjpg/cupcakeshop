<section class="row">
  <div class="col s8">
    <div class="row">
      <div class="col s12">
        <h2 class="header">{{model.title}}</h2>
        <div class="card horizontal row">
          <div class="card-image col s4 m2">
            <img src={{model.thumbnail}}>
          </div>
          <div class="card-stacked col s8 m10">
            <div class="card-content">
              <p>{{model.text}}</p>
            </div>
            <div class="card-action">
              {{#link-to 'cupcakes'}}Back to List{{/link-to}}
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div>
  <div class="col s4">
    <div class="card yellow darken-2 white-text">
      <div class="row">
        <div class="col s10 offset-s1">
          <h3>Recent Ratings</h3>
          <p>{{summaryRating.content}} stars</p>
          <ul>
            {{#each model.ratings as |rating|}}
              <li>"{{rating.title}}" {{rating.value}} stars</li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
